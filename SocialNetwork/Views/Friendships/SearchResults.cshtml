@model List<SocialNetwork.ViewModels.UsersListItemViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table class="table">
	@for (int i = 0; i < Model.Count; i++)
	{
		<tr>
			<td>
				@Model[i].Name
			</td>
			<td>
				@Model[i].Country
			</td>
			<td>
				<a class="btn btn-default" asp-controller="UserProfile" asp-action="UserProfile" asp-route-id="@Model[i].ID">View</a>
			</td>
		</tr>
	}
</table>