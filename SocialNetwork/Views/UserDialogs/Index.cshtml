@model List<Database.Models.DialogModel>
@{

	ViewData["Title"] = "Dialogs";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dialogs:</h1>

<table class="table">
	@for (int i = 0; i < Model.Count; i++)
	{
	<tr>	
		<td>Addressee: @Model[i].Addressee.Name</td>
		<td>Initiator: @Model[i].Initiator.Name</td>
		<td>
			<a class="btn btn-info" asp-controller="UserDialogs" asp-action="Dialog" asp-route-id="@Model[i].ID">
				View
			</a>
		
			<a class="btn btn-danger" asp-controller="UserDialogs" asp-action="RemoveDialog" asp-route-id="@Model[i].ID">
				Remove
			</a>
		</td>
	</tr>
	}
</table>
